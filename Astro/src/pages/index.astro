---
// Solo en el Servidor
const name = "Alejandro Rodríguez Gallardo";
const title = "Mi Pagina con Astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body>
		<h1>{name}</h1>

		<p>Momento actual falso: {new Date().toLocaleTimeString()}</p>
		<p id="current-time">
			Momento actual real: {new Date().toLocaleTimeString()}
		</p>

		<footer>2023</footer>

		<script>
			// Solo en el Cliente

			const currentYear: number = new Date().getFullYear();

			// Cambiar el año actual en la página
			const footer = document.querySelector("footer") as HTMLElement;
			footer.innerText = `Año actual: ${currentYear}`;

			// Cambiar el momento actual en la página
			const currentTime = document.getElementById(
				"current-time",
			) as HTMLParagraphElement;
			currentTime.innerText = `Momento actual real: ${new Date().toLocaleTimeString()}`;
		</script>
	</body>
</html>
